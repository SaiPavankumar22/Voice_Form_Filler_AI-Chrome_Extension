{
  "manifest_version": 3,
  "name": "Voice Form Filler AI",
  "version": "1.0.0",
  "description": "Conversational voice-driven form filling using AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Form Filler AI"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}